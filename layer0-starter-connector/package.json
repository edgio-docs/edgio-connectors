{
  "name": "@layer0/starter",
  "version": "3.0.3",
  "license": "Apache-2.0",
  "layer0-publish-to-repo": "layer0-docs/layer0-connectors",
  "dependencies": {
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.5",
    "fs-extra": "^9.1.0",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "@layer0/core": "^3.0.3",
    "@types/cheerio": "^0.22.23",
    "@types/fs-extra": "^9.0.6",
    "webpack": "^5.18.0"
  },
  "peerDependencies": {
    "@layer0/core": "^3.0.0",
    "ts-loader": "^8.0.0",
    "webpack": "^5.0.0"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md ./dist; tsc; cp -r stage/starter/src/* dist;",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next",
    "test": "jest --runInBand --watchAll=false"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleNameMapper": {
      "^@layer0/core(.*)$": "<rootDir>/../core/src/$1",
      "^@layer0/starter(.*)$": "<rootDir>/../starter/src/$1"
    }
  },
  "publishConfig": {
    "directory": "dist"
  }
}
