{
  "name": "@edgio/sveltekit",
  "version": "7.0.22",
  "license": "Apache-2.0",
  "edgio-publish-to-repo": "edgio-docs/edgio-connectors",
  "dependencies": {
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "esbuild": "^0.11.13",
    "jscodeshift": "^0.13.1",
    "slash": "^3.0.0",
    "yargs": "^15.1.0"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md default-app files ./dist; tsc; cp -r stage/sveltekit/src/* dist; webpack",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "link": "npm run build; cd dist; npm unlink; npm link",
    "release": "cd ./dist; npm publish --access public",
    "test": "jest"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "default-app",
        "files",
        "webpack.config.js",
        "README.md"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "./lambda/**/*.ts",
      "!**/mocks/**",
      "!./src/default-app/**",
      "!**/bin/**/*",
      "!**/index.ts"
    ],
    "moduleNameMapper": {
      "^@edgio/core(.*)$": "<rootDir>/../core/src/$1",
      "^@edgio/sveltekit(.*)$": "<rootDir>/../sveltekit/src/$1"
    }
  },
  "publishConfig": {
    "directory": "dist"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@edgio/core": "^7.0.22",
    "@sveltejs/kit": "^1.0.0-next.193",
    "@types/jscodeshift": "^0.11.2",
    "@types/node": "^14.0.9",
    "babel-loader": "^8.2.2"
  }
}
