{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "Node16",
    "declaration": true,
    "outDir": "./stage",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["dom", "es2020", "scriptHost", "dom.iterable"],
    "baseUrl": "..",
    "paths": {
      "@edgio/core": ["core/src"],
      "@edgio/core/*": ["core/src/*"],
      "@edgio/connectors": ["connectors/src"],
      "@edgio/connectors/*": ["connectors/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src", "files"],
  "exclude": ["node_modules"]
}
