{
  "name": "@edgio/next",
  "version": "7.13.13",
  "license": "Apache-2.0",
  "edgio-publish-to-repo": "edgio-docs/edgio-connectors",
  "dependencies": {
    "@vercel/nft": "^0.20.1",
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "esbuild": "^0.18.20",
    "globby": "^11.0.1",
    "jscodeshift": "^0.16.1",
    "ora": "^4.0.0",
    "path-to-regexp": "^6.2.0",
    "qs": "^6.11.2",
    "resolve-package-path": "^4.0.3",
    "semver": "^7.3.5",
    "slash": "^3.0.0",
    "webpack": "^5.90.2",
    "webpack-sources": "^3.2.3"
  },
  "devDependencies": {
    "@edgio/core": "^7.13.13",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^8.1.1",
    "@types/jscodeshift": "0.12.0",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.0.9",
    "@types/qs": "^6.9.3",
    "@types/semver": "^7.3.9",
    "@types/webpack": "^5.28.5",
    "@types/webpack-sources": "^3.2.3",
    "webpack-merge": "^5.7.3"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md default-app ./dist; tsc; cp -r stage/next/src/* dist; webpack;",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "link": "npm run build; cd dist; npm unlink; npm link",
    "release": "cd ./dist; npm publish --access public",
    "test": "jest --watchAll=false --runInBand --forceExit"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "default-app"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "jsdom",
    "collectCoverage": false,
    "transform": {
      "^.+\\.(js)?$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/default-app/**",
      "!**/mocks/**",
      "!**/index.ts"
    ],
    "moduleNameMapper": {
      "^@edgio/core(.*)$": "<rootDir>/../core/src/$1",
      "^@edgio/next(.*)$": "<rootDir>/../next/src/$1",
      "^@edgio/devtools(.*)$": "<rootDir>/../devtools/src/$1"
    }
  },
  "publishConfig": {
    "directory": "dist"
  }
}
