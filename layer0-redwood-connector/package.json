{
  "name": "@layer0/redwood",
  "version": "4.13.0",
  "description": "Deploy RedwoodJS apps to Layer0",
  "license": "Apache-2.0",
  "layer0-publish-to-repo": "layer0-docs/layer0-connectors",
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md default-app ./dist; tsc; cp -r stage/redwood/src/* dist; webpack",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "link": "npm run build; cd dist; npm unlink; npm link",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next"
  },
  "keywords": [],
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "default-app"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "publishConfig": {
    "directory": "dist"
  },
  "peerDependencies": {
    "@layer0/cli": "^4.8.0",
    "@layer0/core": "^4.8.0"
  },
  "devDependencies": {
    "@layer0/cli": "^4.13.0",
    "@layer0/core": "^4.13.0",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^14.0.9",
    "dotenv-defaults": "^3.0.0",
    "fs-extra": "^10.0.0",
    "toml": "^3.0.0"
  },
  "dependencies": {
    "@vercel/nft": "^0.13.1",
    "chalk": "^4.1.2",
    "webpack": "^5.61.0"
  }
}
