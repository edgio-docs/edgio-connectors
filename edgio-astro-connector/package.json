{
  "name": "@edgio/astro",
  "version": "6.1.5",
  "description": "Deploy Astro apps to Edgio",
  "license": "Apache-2.0",
  "edgio-publish-to-repo": "edgio-docs/edgio-connectors",
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md default-app ./dist; tsc; cp -r stage/astro/src/* dist; webpack; node ./replaceDynamicImports.js",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "link": "npm run build; cd dist; npm unlink; npm link",
    "release": "cd ./dist; npm publish --access public --tag latest-v6",
    "release:next": "npm run release -- --tag next-v6"
  },
  "keywords": [],
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "default-app"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "publishConfig": {
    "directory": "dist"
  },
  "devDependencies": {
    "@edgio/core": "^6.1.5",
    "@types/node": "^14.0.9"
  },
  "dependencies": {
    "@vercel/nft": "^0.22.1",
    "webpack": "^5.74.0"
  }
}
