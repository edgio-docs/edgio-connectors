{
  "name": "@edgio/starter",
  "version": "7.0.21",
  "license": "Apache-2.0",
  "edgio-publish-to-repo": "edgio-docs/edgio-connectors",
  "dependencies": {
    "browserslist": "^4.16.5",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.5",
    "esbuild": "^0.11.15",
    "esbuild-plugin-browserslist": "^0.1.0",
    "fs-extra": "^9.1.0",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "@edgio/core": "^7.0.21",
    "@types/cheerio": "^0.22.23",
    "@types/fs-extra": "^9.0.6"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md ./dist; tsc; cp -r stage/starter/src/* dist;",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "release": "cd ./dist; npm publish --access public",
    "test": "jest --runInBand --watchAll=false"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleNameMapper": {
      "^@edgio/core(.*)$": "<rootDir>/../core/src/$1",
      "^@edgio/starter(.*)$": "<rootDir>/../starter/src/$1"
    }
  },
  "publishConfig": {
    "directory": "dist"
  }
}
