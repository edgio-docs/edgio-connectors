{
  "name": "@layer0/vue-storefront",
  "version": "4.18.6",
  "license": "Apache-2.0",
  "layer0-publish-to-repo": "layer0-docs/layer0-connectors",
  "dependencies": {
    "@layer0/apollo": "^4.18.6",
    "@layer0/nuxt": "^4.18.6",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^10.1.0",
    "jscodeshift": "^0.13.1",
    "ora": "^4.1.1"
  },
  "devDependencies": {
    "@layer0/core": "^4.18.6",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jscodeshift": "^0.11.5",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "peerDependencies": {
    "@layer0/core": "^4.15.1"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r src/* package.json README.md default-app ./dist; tsc; cp -r stage/vue-storefront/src/* dist; webpack",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "watch": "npm-watch",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "webpack.config.js"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "transform": {
      "^.+\\.(js)?$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/{dev,build,init,prod}.ts",
      "!src/sw/**/*"
    ],
    "moduleNameMapper": {
      "^@layer0/core(.*)$": "<rootDir>/../core/src/$1"
    }
  },
  "publishConfig": {
    "directory": "dist"
  }
}
