{
  "name": "@xdn/angular",
  "version": "2.43.0",
  "license": "Apache-2.0",
  "xdn-publish-to-repo": "moovweb-docs/xdn-connectors",
  "peerDependencies": {
    "@xdn/core": "^2.30.1"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@xdn/core": "^2.43.0"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md default-app ./dist; tsc; cp -r stage/angular/src/* dist;",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "release": "npm run build; cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next",
    "test": "jest"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json",
        "default-app"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/router/**/*.ts",
      "!**/index.ts"
    ],
    "moduleNameMapper": {
      "^@xdn/core(.*)$": "<rootDir>/../core/dist/$1",
      "^@xdn/angular(.*)$": "<rootDir>/../angular/src/$1"
    }
  },
  "publishConfig": {
    "directory": "dist"
  }
}
