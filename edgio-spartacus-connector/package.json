{
  "name": "@edgio/spartacus",
  "version": "6.1.5",
  "license": "Apache-2.0",
  "edgio-publish-to-repo": "edgio-docs/edgio-connectors",
  "dependencies": {
    "@angular/common": "^10.2.0",
    "@types/cls-hooked": "^4.3.1",
    "@types/express-serve-static-core": "^4.17.13",
    "cls-hooked": "^4.2.2"
  },
  "devDependencies": {
    "@edgio/angular": "^6.1.5",
    "@edgio/cli": "^6.1.5",
    "@edgio/core": "^6.1.5",
    "@edgio/prefetch": "^6.1.5",
    "@typescript-eslint/parser": "^4.5.0"
  },
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp -r package.json README.md default-app ./dist; tsc; cp -r package.json README.md stage/spartacus/src/* dist",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "link": "npm run build; cd dist; npm unlink; npm link",
    "release": "npm run build; cd ./dist; npm publish --access public --tag latest-v6",
    "release:next": "npm run release -- --tag next-v6",
    "test": "jest"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!**/test/**"
    ]
  },
  "publishConfig": {
    "directory": "dist"
  }
}
